#!/bin/bash
julia --project=docs -e '
    using Pkg
    Pkg.develop(PackageSpec(path=pwd()))
    Pkg.instantiate()
    using Weave
    weave("docs/README.jmd")'

if ! git diff --exit-code README.md; then
    git add README.md docs/figures/README_4_1.png
    git commit -m 're-weave README'
    exit 1
else
    exit 0
fi
